#!/bin/bash
set -e

# CLeanup old dist
rm -rf dist
mkdir dist

# Copy workbox libraries
./node_modules/.bin/workbox copyLibraries dist

# Info
dir=`echo dist/*`
version=`echo $dir | grep -oE "v[a-z0-9.-]+$"`$suffix
version=${version:1}

# Normalize
mv $dir/* dist
rmdir $dir
rm dist/*.map

# Bump version
perl -pi -e "s|\"version\": .+|\"version\": \"$version\",|" "package.json"

# Better CDN
find workbox -type f | xargs perl -pi -e "s|https://storage.googleapis.com/workbox-cdn/releases/[^\"]+|https://cdnjs.baoshuo.ren/baoshuo/workbox-cdn\@$version/dist|g"

# Remove sourcemap references
find workbox -type f | xargs perl -pi -e "s|^//# .+||g"

echo "workbox-cdn@$version"
